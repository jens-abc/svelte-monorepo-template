{
  "name": "@libs/ui",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "svelte-kit sync && svelte-package --watch --input=src",
    "build": "svelte-kit sync && svelte-package --input=src",
    "lint": "eslint .",
    "check-types": "svelte-check --tsconfig ./tsconfig.json"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*",
    "src",
    "!src/**/*.test.*",
    "!src/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@libs/tailwind-config": "workspace:*",
    "bits-ui": "^2.9.3",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@libs/eslint-config": "workspace:*",
    "@libs/typescript-config": "workspace:*",
    "@sveltejs/kit": "^2.30.1",
    "@sveltejs/package": "^2.4.1",
    "@sveltejs/vite-plugin-svelte": "^6.1.2",
    "eslint": "^9.33.0",
    "svelte": "^5.38.1",
    "svelte-check": "^4.3.1",
    "typescript": "5.9.2",
    "vite": "^7.1.2"
  }
}
